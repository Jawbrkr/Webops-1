<?xml version="1.0" encoding="UTF-8"?>
<widget 
	xmlns	= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		    = "com.nitobi.johngarrett"
	version 	= "1.0">

	<name>WebOps</name>

	<description>
		WebOps mobile application.
	</description>
	
	<author href="http://www.webops.com" email="webops@webops.com">
      WebOps
    </author>

	<icon src="icon.png" />
